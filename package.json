{
  "name": "mots-flex",
  "version": "1.0.0",
  "description": "Generateur de mots fleches",
  "scripts": {
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "pprebuild": "npm run build:client && npm run build:server",
    "prepare": "npm run build",
    "build": "node scripts/build.mjs",
    "package": "npm-pkgbuild --debian --publish dist"
  },
  "author": "Leo Nicolle",
  "files": [
    "dist/"
  ],
  "license": "MIT",
  "contributors": [
    {
      "name": "Leo Nicolle",
      "email": "nicolle_leo@yahoo.fr"
    }
  ],
  "devDependencies": {
    "decompress": "^4.2.1",
    "execa": "^7.1.0",
    "fs-extra": "^11.1.0",
    "npm-pkgbuild": "^11.5.17",
    "rimraf": "^4.4.0",
    "semantic-release": "^20.1.3"
  },
  "pkgbuild": {
    "content": {
      "usr/share/applications/mots-flex.desktop": "scripts/assets/mots-flex.desktop",
      "usr/share/mots-flex/": "build/",
      "/usr/share/icons/hicolor/scalable/apps/mots-flex.svg": "scripts/assets/icon.svg",
      "usr/bin/mots-flex": "scripts/assets/mots-flex"
    },
    "output": {
      "debian": {
      }
    },
    "name": "mots-flex",
    "title": "Mots-Flex"
  }
}