{
  "name": "client",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite -c vite.config.ts",
    "build": "vite build",
    "pretest": "rm -rf reports/ && vite build --mode testing",
    "update:snapshot": "UPDATE_SNAPSHOTS=true vitest run --mode testing Grid-view",
    "test": "vitest run --mode testing",
    "test2": "vitest run -c vitest.config.ts",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@types/uuid": "^9.0.0",
    "@types/vector2js": "^2.0.0",
    "@vicons/ionicons5": "^0.12.0",
    "@vueuse/core": "^9.13.0",
    "axios": "^0.26.1",
    "chroma-js": "^2.4.2",
    "core-js": "^3.8.3",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "database": "file:../database",
    "fflate": "^0.8.0",
    "grid": "file:../grid",
    "keyboard-css": "^1.2.4",
    "lodash.throttle": "^4.1.1",
    "minisearch": "^6.3.0",
    "naive-ui": "^2.34.3",
    "plausible-tracker": "^0.3.8",
    "uuid": "^9.0.1",
    "vector2js": "^2.0.1",
    "vue": "^3.2.13",
    "vue-i18n": "^9.2.2",
    "vue-plausible": "^1.3.2",
    "vue-router": "^4.0.3",
    "vue3-highlightjs": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@playwright/test": "^1.32.1",
    "@types/fabric": "^4.5.14",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/runner": "^0.29.7",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "^5.0.4",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "happy-dom": "^13.1.4",
    "jsdom": "^21.1.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "playwright": "^1.32.1",
    "rimraf": "^4.4.1",
    "typescript": "~4.5.5",
    "vite": "^4.1.4",
    "vite-plugin-glslify": "^2.0.2",
    "vitest": "^0.29.5",
    "vue-tsc": "^1.2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "no-mixed-operators": 0,
      "no-param-reassign": 0,
      "no-plusplus": 0,
      "no-shadow": 0,
      "no-continue": 0,
      "keyword-spacing": 1,
      "semi": 1,
      "padded-blocks": 0,
      "no-useless-constructor": 0,
      "no-empty-function": 0,
      "no-unused-vars": 0,
      "max-len": 0,
      "no-nested-ternary": 0,
      "prefer-const": 0,
      "vue/no-v-for-template-key-on-child": 0,
      "vue/multi-word-component-names": 0,
      "vue/no-unused-components": 0,
      "no-debugger": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
